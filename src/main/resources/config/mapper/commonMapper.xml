<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wisdom.mapper.UserInfoMapper">

    <update id="update" parameterType="com.wisdom.model.UserInfo">
        UPDATE userinfo SET name=#{name},age=#{age} WHERE id=#{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM userinfo WHERE id=#{id}
    </delete>

    <select id="getUserInfoByName" resultType="HashMap" parameterType="string">
        select * from userinfo where name = #{name}
    </select>
    <select id="getUserList" resultType="HashMap">
        SELECT id,name,age from userinfo
    </select>
	
	<insert id="saveCityInfo" parameterType="HashMap">
		insert into poic_cityCode(province,city,area) values(#{province},#{city},#{area})
	</insert>
	
	<insert id="batchSaveCityInfo" parameterType="list">
		insert into poic_cityCode(province,city,area)  values
		<foreach collection="list" item="cityItem" separator=",">
		(#{cityItem.province},#{cityItem.city},#{cityItem.area})
		</foreach>
		
	</insert>

</mapper>